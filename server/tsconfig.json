{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitThis": false,
      "noUnusedLocals": true,
      "noUnusedParameters": true, // turned this off
      "removeComments": true,
      "skipLibCheck": false,
      "sourceMap": true,
      "strictNullChecks": false, // also this
      "experimentalDecorators": true,
      "target": "ES2017",
      "types" : [ "node" ],
      "typeRoots": [
         "node_modules/@types",
         "@typesCustom"
      ],
      "noImplicitAny": true,
      "outDir": "dist/",
      "rootDir": "src/"
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ],
    "typeRoots": [
      "@typesCustom",
      "node_modules/@types"
    ],
    "compileOnSave": true
  }